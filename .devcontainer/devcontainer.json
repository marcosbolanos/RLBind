{
  "build": {
    "dockerfile":"../Dockerfile",
    "target":"dev"
  },
  "remoteUser":"devuser",
  "updateRemoteUserUID": false,
  "remoteEnv": {
    "PATH": "${containerEnv:HOME}/.local/share/nvim/mason/bin:${containerEnv:PATH}"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/starship:1":{},
    "ghcr.io/marcosbolanos/devcontainer-features/neovim-prebuilt:latest": {}
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/RLBind,type=bind",
  "workspaceFolder": "/workspaces/RLBind",
  "mounts": [
    "type=bind,source=${localEnv:HOME}/.config/nvim,target=/home/devuser/.config/nvim",
    "type=bind,source=${localEnv:HOME}/.local/share/nvim,target=/home/devuser/.local/share/nvim",
    "type=bind,source=${localEnv:HOME}/.config/starship.toml,target=/home/devuser/.config/starship.toml,readonly",
    "type=bind,source=${localEnv:HOME}/.ssh,target=/home/devuser/.ssh,readonly",
    "type=bind,source=${localEnv:HOME}/.gitconfig,target=/home/devuser/.gitconfig,readonly"
  ],
}
